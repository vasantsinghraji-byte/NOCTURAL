<script type="module">
    // Import Firebase modules
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getAuth, onAuthStateChanged, createUserWithEmailAndPassword, signInWithEmailAndPassword, signOut } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";
    import { getFirestore, doc, setDoc, getDoc, collection, addDoc, query, where, onSnapshot, updateDoc, getDocs } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-firestore.js";

    // Firebase configuration (MUST MATCH firebase-config.js)
    const firebaseConfig = {
        apiKey: "AIzaSyCd46DqN40OBl1QHx0mYiAGCo8s6A_CHLI",
        authDomain: "nocturnal-49be3.firebaseapp.com",
        projectId: "nocturnal-49be3",
        storageBucket: "nocturnal-49be3.firebasestorage.app",
        messagingSenderId: "1056329690624",
        appId: "1:1056329690624:web:a0e2b5a8c1da86c3f1e06a"
    };

    // Initialize Firebase
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // Export to global window object for app.js to use
    window.firebase = {
        auth,
        db,
        onAuthStateChanged,
        createUserWithEmailAndPassword,
        signInWithEmailAndPassword,
        signOut,
        doc,
        setDoc,
        getDoc,
        collection,
        addDoc,
        query,
        where,
        onSnapshot,
        updateDoc,
        getDocs
    };

    console.log('‚úÖ Firebase initialized successfully');

    // Simple page navigation functions
    function showPage(pageId) {
        const pages = ['landing-page', 'login-page', 'register-page', 'dashboard'];
        pages.forEach(id => {
            const element = document.getElementById(id);
            if (element) {
                element.style.display = 'none';
            }
        });
        
        const targetPage = document.getElementById(pageId);
        if (targetPage) {
            targetPage.style.display = (pageId === 'landing-page') ? 'flex' : 'block';
        }
    }

    // Wait for DOM to load
    window.addEventListener('DOMContentLoaded', () => {
        // Navigation event listeners
        const showLoginBtn = document.getElementById('show-login-btn');
        const showRegisterBtn = document.getElementById('show-register-btn');
        const backFromLogin = document.getElementById('back-from-login');
        const backFromRegister = document.getElementById('back-from-register');
        const goToRegister = document.getElementById('go-to-register');
        const goToLogin = document.getElementById('go-to-login');
        const registerRole = document.getElementById('register-role');

        if (showLoginBtn) showLoginBtn.addEventListener('click', () => showPage('login-page'));
        if (showRegisterBtn) showRegisterBtn.addEventListener('click', () => showPage('register-page'));
        if (backFromLogin) backFromLogin.addEventListener('click', () => showPage('landing-page'));
        if (backFromRegister) backFromRegister.addEventListener('click', () => showPage('landing-page'));
        if (goToRegister) goToRegister.addEventListener('click', () => showPage('register-page'));
        if (goToLogin) goToLogin.addEventListener('click', () => showPage('login-page'));

        // Role selection handler
        if (registerRole) {
            registerRole.addEventListener('change', (e) => {
                const hospitalField = document.getElementById('hospital-field');
                const specialtyField = document.getElementById('specialty-field');
                
                if (e.target.value === 'admin') {
                    if (hospitalField) hospitalField.style.display = 'block';
                    if (specialtyField) specialtyField.style.display = 'none';
                } else if (e.target.value === 'doctor' || e.target.value === 'nurse') {
                    if (hospitalField) hospitalField.style.display = 'none';
                    if (specialtyField) specialtyField.style.display = 'block';
                } else {
                    if (hospitalField) hospitalField.style.display = 'none';
                    if (specialtyField) specialtyField.style.display = 'none';
                }
            });
        }

        // Login form handler
        const loginForm = document.getElementById('login-form');
        if (loginForm) {
            loginForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = loginForm['login-email'].value;
                const password = loginForm['login-password'].value;
                const errorEl = document.getElementById('login-error');

                try {
                    console.log('üîê Attempting login...');
                    await signInWithEmailAndPassword(auth, email, password);
                    // onAuthStateChanged will handle the redirect
                } catch (error) {
                    console.error('‚ùå Login error:', error);
                    if (errorEl) {
                        errorEl.textContent = error.message;
                        errorEl.style.display = 'block';
                    }
                }
            });
        }

        // Register form handler
        const registerForm = document.getElementById('register-form');
        if (registerForm) {
            registerForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const name = registerForm['register-name'].value;
                const email = registerForm['register-email'].value;
                const password = registerForm['register-password'].value;
                const role = registerForm['register-role'].value;
                const specialty = registerForm['register-specialty']?.value;
                const hospital = registerForm['register-hospital']?.value;
                const location = registerForm['register-location'].value;
                const errorEl = document.getElementById('register-error');

                try {
                    console.log('üìù Attempting registration...');
                    const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                    const user = userCredential.user;

                    const userProfile = { name, email, role, location, createdAt: new Date() };
                    if (role === 'admin') userProfile.hospital = hospital;
                    else userProfile.specialty = specialty;

                    await setDoc(doc(db, "users", user.uid), userProfile);
                    console.log('‚úÖ Registration successful');
                    // onAuthStateChanged will handle the redirect
                } catch (error) {
                    console.error('‚ùå Registration error:', error);
                    if (errorEl) {
                        errorEl.textContent = error.message;
                        errorEl.style.display = 'block';
                    }
                }
            });
        }

        // Authentication state listener
        onAuthStateChanged(auth, async (user) => {
            console.log('üîÑ Auth state changed:', user ? user.email : 'No user');

            if (user) {
                const userDocRef = doc(db, 'users', user.uid);
                const userDoc = await getDoc(userDocRef);

                if (userDoc.exists()) {
                    const userData = userDoc.data();
                    const token = await user.getIdToken();

                    // Save to localStorage
                    localStorage.setItem('token', token);
                    localStorage.setItem('userId', user.uid);
                    localStorage.setItem('userName', userData.name || 'User');

                    console.log('üë§ User role:', userData.role);

                    // Redirect based on role
                    if (userData.role === 'doctor' || userData.role === 'nurse') {
                        localStorage.setItem('userType', 'doctor');
                        console.log('üè• Redirecting to doctor dashboard...');
                        window.location.href = 'doctor-dashboard.html';
                    } else if (userData.role === 'admin') {
                        localStorage.setItem('userType', 'hospital');
                        console.log('üè• Showing admin dashboard...');
                        // TODO: Show admin dashboard (currently not implemented in index.html)
                        alert('Admin login successful! Admin dashboard coming soon.');
                    }
                }
            } else {
                // User logged out
                localStorage.clear();
                showPage('landing-page');
            }
        });

        console.log('‚úÖ Event listeners attached');
    });
</script>

